<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <title>记账本</title>
  <style>
    body {
      font-family: "Arial", sans-serif;
      background-color: #fff;
      max-width: 600px;
      margin: 40px auto;
      padding: 0 20px;
    }

    h1 {
      text-align: left;
      font-size: 28px;
      margin-bottom: 20px;
      border-bottom: 1px solid #ddd;
      padding-bottom: 10px;
    }

    .record {
      border: 1px solid #ddd;
      border-radius: 6px;
      margin-bottom: 20px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .record-header {
      padding: 10px 15px;
      font-weight: bold;
      color: #333;
    }

    .record-body {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px;
      font-size: 16px;
    }

    .record-body span {
      margin-right: 10px;
    }

    .tag {
      display: inline-block;
      padding: 2px 8px;
      border-radius: 4px;
      font-size: 14px;
      color: white;
    }

    .expense .record-header {
      background-color: #f8d7da;
    }

    .expense .tag {
      background-color: #f0ad4e;
    }

    .income .record-header {
      background-color: #d4edda;
    }

    .income .tag {
      background-color: #5cb85c;
    }

    .amount {
      font-weight: bold;
      white-space: nowrap;
    }
  </style>
</head>
<body>

  <h1>记账本</h1>

  <% account.forEach(item => { %>
    <div class="record <%= item.type === '-1' ? 'expense' : 'income' %>">
      <div class="record-header"><%= item.time %></div>
      <div class="record-body">
        <span><%= item.title %></span>
        <span class="tag"><%= item.type === '-1' ? '支出' : '收入' %></span>
        <span class="amount"><%= item.amount %> 元</span>
      </div>
    </div>
  <% }) %>

</body>
</html>
